<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lomtaxi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Milla Mobility</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="GOOGLE_MAPS_ANDROID_API_KEY" value="AIzaSyDD_i9izhBIngUbO3p98-unNFINIrOYqSI" />
    <platform name="android">
        <allow-intent href="market:*" />
        <allow-navigation href="*" />
        <feature name="SplashScreen">
            <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        </feature>
        <icon density="ldpi" src="res/icon/android/MILLA.png" />
        <splash density="land-hdpi" src="res/screen/android/MillaMobilityWhite2.png" />
        <splash density="land-ldpi" src="res/screen/android/MillaMobilityWhite2.png" />
        <splash density="land-mdpi" src="res/screen/android/MillaMobilityWhite2.png" />
        <splash density="land-xhdpi" src="res/screen/android/MillaMobilityWhite2.png" />
        <splash density="port-hdpi" src="res/screen/android/MillaMobilityWhite2.png" />
        <splash density="port-ldpi" src="res/screen/android/MillaMobilityWhite2.png" />
        <splash density="port-mdpi" src="res/screen/android/MillaMobilityWhite2.png" />
        <splash density="port-xhdpi" src="res/screen/android/MillaMobilityWhite2.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-navigation href="*" />
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-android-play-services-gradle-release" spec="^1.4.4">
        <variable name="PLAY_SERVICES_VERSION" value="15.0.0" />
    </plugin>
    <plugin name="cordova-plugin-app-version" spec="^0.1.9" />
    <plugin name="in.lucasdup.bringtofront" spec="https://github.com/markeeftb/cordova-bring-to-front" />
    <plugin name="cordova-plugin-background-mode" spec="^0.7.2" />
    <plugin name="cordova-plugin-globalization" spec="^1.11.0" />
    <plugin name="cordova-plugin-googlemaps" spec="^2.6.2">
        <variable name="PLAY_SERVICES_VERSION" value="15.0.1" />
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
        <variable name="API_KEY_FOR_ANDROID" value="AIzaSyDD_i9izhBIngUbO3p98-unNFINIrOYqSI" />
    </plugin>
    <engine name="android" spec="^7.0.0" />
</widget>
