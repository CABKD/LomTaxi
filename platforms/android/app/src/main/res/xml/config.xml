<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lomtaxi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="AppVersion">
        <param name="android-package" value="uk.co.whiteoctober.cordova.AppVersion" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="Globalization">
        <param name="android-package" value="org.apache.cordova.globalization.Globalization" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="bringtofront">
        <param name="android-package" value="in.lucasdup.bringtofront.BringToFront" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="BackgroundMode">
        <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundMode" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <name>Milla Mobility</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icon/android/MILLA.png" />
    <splash density="land-hdpi" src="res/screen/android/MillaMobilityWhite2.png" />
    <splash density="land-ldpi" src="res/screen/android/MillaMobilityWhite2.png" />
    <splash density="land-mdpi" src="res/screen/android/MillaMobilityWhite2.png" />
    <splash density="land-xhdpi" src="res/screen/android/MillaMobilityWhite2.png" />
    <splash density="port-hdpi" src="res/screen/android/MillaMobilityWhite2.png" />
    <splash density="port-ldpi" src="res/screen/android/MillaMobilityWhite2.png" />
    <splash density="port-mdpi" src="res/screen/android/MillaMobilityWhite2.png" />
    <splash density="port-xhdpi" src="res/screen/android/MillaMobilityWhite2.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="KeepRunning" value="true" />
    <preference name="AndroidLaunchMode" value="singleInstance" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="orientation" value="portrait" />
</widget>
